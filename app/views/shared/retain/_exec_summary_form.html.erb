<%  content_tag :div, html_tag(call_fi5312, 'div', :style => 'border:solid 1px;') do -%>
<%=   content_tag :span, "", html_tag(call_fi5312, 'reply-span') %>
<%-   submit_id = id_for(call_fi5312, "submit") -%>
<%-   remote_form_for(call_fi5312,
     		      :loading => "Raptor.disableSubmit($('#{submit_id}'));",
     		      :complete => "Raptor.enableSubmit($('#{submit_id}'));",
     		      :html => html_tag(call_fi5312, "form")) do |cfi| -%>
<%=     do_label("eSummary:", "line_1", call_fi5312) -%>
<%=     do_text_field(cfi, :line_1, 60, call_fi5312,
     		      :placeholder => 'Enter three lines of executive summary') -%><br />
<%=     do_label("&nbsp;-", "line_2", call_fi5312) -%>
<%=     do_text_field(cfi, :line_2, 67, call_fi5312) -%><br />
<%=     do_label("&nbsp;-", "line_3", call_fi5312) -%>
<%=     do_text_field(cfi, :line_3, 67, call_fi5312) -%><br />
<%=     do_label("Next Action Owner:", "next-action-owner", call_fi5312) -%>
        <br />
<%=     cfi.radio_button(:next_action_owner, "DCT", html_tag(call_fi5312, "dct-radio")) -%>
<%=     do_label("DCT", "dct-radio", call_fi5312) -%>
<%=     cfi.radio_button(:next_action_owner, "DSS", html_tag(call_fi5312, "dss-radio")) -%>
<%=     do_label("DSS", "dss-radio", call_fi5312) -%>
<%=     cfi.radio_button(:next_action_owner, "Frontend", html_tag(call_fi5312, "frontend-radio")) -%>
<%=     do_label("Frontend", "frontend-radio", call_fi5312) -%>
<%=     cfi.radio_button(:next_action_owner, "Customer", html_tag(call_fi5312, "customer-radio")) -%>
<%=     do_label("Customer", "customer-radio", call_fi5312) -%>
<%=     cfi.radio_button(:next_action_owner, "HW", html_tag(call_fi5312, "hw-radio")) -%>
<%=     do_label("HW", "hw-radio", call_fi5312) -%>
<%=     cfi.radio_button(:next_action_owner, "Advocate", html_tag(call_fi5312, "advocate-radio")) -%>
<%=     do_label("Advocate", "advocate-radio", call_fi5312) -%>
        <br />
<%=     do_label("Follow-up Date:", "month", call_fi5312) -%>
<%=     do_text_field(cfi, :month, 2, call_fi5312) -%>
<%=     do_label("/", "day", call_fi5312) -%>
<%=     do_text_field(cfi, :day, 2, call_fi5312) -%>
<%=     do_label("/", "year", call_fi5312) -%>
<%=     do_text_field(cfi, :year, 4, call_fi5312) -%><br />
<%=     cfi.submit "Submit", html_tag(call_fi5312, "submit") -%>
<%    end -%>
<%  end -%>

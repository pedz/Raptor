<%# -*- coding: utf-8 -*- -%>
<!-- <%= __FILE__[Rails.root.to_s.length+1 .. -1] %> -->
<%-
    space_name  = klass.to_s.underscore.gsub(/_/, ' ')
    space_names = klass.to_s.pluralize.gsub(/(.)([A-Z])/, '\1 \2')
-%>
<h1><%= @title = "#{space_names}" %></h1>
<%= yield :body %>
<%= link_to "New #{space_name}", parent ? new_polymorphic_path([parent, klass]) : new_polymorphic_path(klass) %>

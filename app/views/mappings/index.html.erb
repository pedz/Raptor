<% content_for :body do %>
  <!-- <%= __FILE__[Rails.root.to_s.length+1 .. -1] %> -->
  <table>
    <tr>
      <th>Subject</th>
      <th>Source</th>
      <th>Sql</th>
    </tr>

    <% @mappings.each do |mapping| %>
      <tr>
	<td><%=h mapping.subject.name %></td>
	<td><%=h mapping.source.base_type %></td>
	<td><%=h mapping.sql %></td>
	<td><%= link_to 'Show', mapping %></td>
	<td><%= link_to 'Edit', edit_mapping_path(mapping) %></td>
	<td><%= link_to 'Destroy', mapping, :confirm => 'Are you sure?', :method => :delete %></td>
      </tr>
    <% end %>
  </table>
<%- end -%>
<%= render :partial => 'shared/config_index',
      :locals => { :klass => Mapping, :parent => nil } %>

<%- content_for(:center) do -%>
  <%= render :partial => 'layouts/shared/display_flash' %>
  <h1>New Retain User</h1>

  <%= error_messages_for :retuser %>

  <% form_for([:config, @user, @retuser]) do |f| %>
    <p>
      <b>Retain Id</b><br />
      <%= f.text_field :retid %>
    </p>
    <p>
      <b>APPTEST</b> (Leave off for normal production use)<br />
      <%= f.check_box :apptest %>
    </p>
    
    <p>
      <b>Password</b><br />
      <%= f.password_field :password %>
    </p>
    
    <p>
      <b>Retype your password</b><br />
      <%= f.password_field :password_confirmation %>
    </p>
    
    <p>
      <%= f.submit "Create" %>
    </p>
  <% end %>
  
  <%= link_to 'Back to User', config_user_path(@user) %> |
  <%= link_to 'List of Retain Ids', config_user_retusers_path(@user) %>
<%- end -%>

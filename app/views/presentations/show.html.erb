<%- @title = "Show presentation: #{@presentation.name}" -%>
<%- content_for(:top) do -%>
  <h1><%= @title %></h1>
  <%= render :partial => 'layouts/shared/display_flash' %>
<%- end -%>
<%- content_for(:center) do -%>
<p>
  <b>Name:</b>
  <%=h @presentation.name %>
</p>
<p>
  <b>Owner:</b>
  <%=h @presentation.owner.ldap_id %>
</p>
<p>
  <b>Elements:</b>
  <%= link_to 'Show', presentation_elements_path(@presentation) %>
</p>
<%- end -%>
<%- content_for(:bottom) do -%>
<%= link_to 'Edit', edit_presentation_path(@presentation) %> |
<%= link_to 'Back', presentations_path %>
<%- end -%>

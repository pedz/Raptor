<%# -*- coding: utf-8 -*- -%>
<% content_for :body do %>
  <!-- <%= __FILE__[Rails.root.to_s.length+1 .. -1] %> -->
  <% form_for([@view, @element]) do |f| %>
    <%= f.error_messages %>
    <p>
      <%= f.label :widget_id %><br />
      <%= f.collection_select(:widget_id, Widget.all, :id, :name) %>
    </p>
    <p>
      <%= f.label :view_id %><br />
      <%= f.text_field :view_id %>
    </p>
    <p>
      <%= f.label :row %><br />
      <%= f.text_field :row %>
    </p>
    <p>
      <%= f.label :col %><br />
      <%= f.text_field :col %>
    </p>
    <p>
      <%= f.label :rowspan %><br />
      <%= f.text_field :rowspan %>
    </p>
    <p>
      <%= f.label :colspan %><br />
      <%= f.text_field :colspan %>
    </p>
    <p>
      <%= f.submit 'Update' %>
    </p>
  <% end %>
<%- end -%>
<%= render :partial => 'shared/config_edit',
      :locals => { :name => "#{@element.view.name}[#{@element.row},#{@element.col}]",
                   :item => @element, :parent => @view } %>

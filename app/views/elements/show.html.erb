<% content_for :body do %>
  <!-- <%= __FILE__[Rails.root.to_s.length+1 .. -1] %> -->
  <p>
    <b>Widget:</b>
    <%= link_to @element.widget.name, widget_path(@element.widget) %>
  </p>

  <p>
    <b>View:</b>
    <%=h @element.view.name %>
  </p>

  <p>
    <b>Row:</b>
    <%=h @element.row %>
  </p>

  <p>
    <b>Column:</b>
    <%=h @element.col %>
  </p>

  <p>
    <b>Rowspan:</b>
    <%=h @element.rowspan %>
  </p>

  <p>
    <b>Colspan:</b>
    <%=h @element.colspan %>
  </p>
<%- end -%>
<%= render :partial => 'shared/config_show',
  :locals => { :name => "#{@element.view.name}[#{@element.row},#{@element.col}]",
               :item => @element, :parent => @view } %>

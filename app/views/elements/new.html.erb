<% content_for :body do %>
  <!-- <%= __FILE__[Rails.root.to_s.length+1 .. -1] %> -->
  <% form_for([@view, @element]) do |f| %>
    <%= f.error_messages %>

    <p>
      <%= f.label :widget_id %><br />
      <%= f.collection_select(:widget_id, widget_list, :id, :name) %>
    </p>
    <p>
      <%= f.label :row %><br />
      <%= f.text_field :row %>
    </p>
    <p>
      <%= f.label :col %><br />
      <%= f.text_field :col %>
    </p>
    <p>
      <%= f.label :rowspan %><br />
      <%= f.text_field :rowspan %>
    </p>
    <p>
      <%= f.label :colspan %><br />
      <%= f.text_field :colspan %>
    </p>
    <p>
      <%= f.submit 'Create' %>
    </p>
  <% end %>
<%- end -%>
<%= render :partial => 'shared/config_new',
      :locals => { :item => @element, :parent => @view } %>

<%# -*- coding: utf-8 -*- -%>
<%- @title = "Show #{@combined_queue.to_param}" -%>
<%- content_for(:top) do -%>
  <h1><%= @title %></h1>
<%- end -%>
<%- content_for(:center) do -%>
<%- if @calls.nil? -%>
  -- Empty --
<%- else -%>
  <table style='font-family : courier, monospace'>
    <thead>
      <th>Sel#</th>
      <th>Prblm,bnc,cty</th>
      <th>Cat</th>
      <th>S</th>
      <th>P</th>
      <th>Comments</th>
      <th>Customer</th>
      <th>CStatus</th>
    </thead>
  <% index = 0 -%>
  <% for call in @calls -%>
    <tr>
      <td><%= button_url("#{index += 1}", call) %></td>
      <td><%= link_to call.pmr.pbc, call %></td>
      <td><%= h call.category %></td>
      <td><%= h call.p_s_b %></td>
      <td><%= h call.priority %></td>
       <td><%= h call.comments %></td>
       <td><%= h call.nls_customer_name %></td>
       <td><%= h call.cstatus %></td>
    </tr>
  <% end -%>
  </table>
<%- end -%>
<%- end -%>
<%- content_for(:bottom) do -%>
  <%= home_button %>
<%- end -%>

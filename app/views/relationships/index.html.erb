<h1>Listing relationships</h1>

<table>
  <tr>
    <th>Container name</th>
    <th>Relationship type</th>
    <th>Element</th>
  </tr>

<% @relationships.each do |relationship| %>
  <tr>
    <td><%=h relationship.container_name.name %></td>
    <td><%=h relationship.relationship_type.association_type.association_type %></td>
    <td><%=h relationship.element_name.element_name %></td>
    <td><%= link_to 'Show', relationship %></td>
    <td><%= link_to 'Edit', edit_relationship_path(relationship) %></td>
    <td><%= link_to 'Destroy', relationship, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />


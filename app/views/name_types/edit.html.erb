<h1>Editing name_type</h1>

<% form_for(@name_type) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name_type %><br />
    <%= f.text_field :name_type %>
  </p>
  <p>
    <%= f.label :table_name %><br />
    <%= f.text_field :table_name %>
  </p>
  <p>
    <%= f.label :container, "Is this a container?" %><br />
    <%= f.check_box :container %>
  </p>
  <p>
    <%= f.label :containable, "Can this be put into a container?" %><br />
    <%= f.check_box :containable %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @name_type %> |
<%= link_to 'Back', name_types_path %>

<%# -*- coding: utf-8 -*- -%>
<% content_for :body do %>
  <!-- <%= __FILE__[Rails.root.to_s.length+1 .. -1] %> -->
  <% form_for(@name_type) do |f| %>
    <%= f.error_messages %>

    <p>
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </p>
    <p>
      <%= f.label :argument_type_id%><br />
      <%= f.collection_select(:argument_type_id,
			      ArgumentType.all,
			      :id,
			      :name,
			      { :include_blank => true }) %>
    </p>
    <p>
      <%= f.label :container, "Is this a container?" %><br />
      <%= f.check_box :container %>
    </p>
    <p>
      <%= f.label :containable, "Can this be put into a container?" %><br />
      <%= f.check_box :containable %>
    </p>
    <p>
      <%= f.submit 'Create' %>
    </p>
  <% end %>
<%- end -%>
<%= render :partial => 'shared/config_new',
      :locals => { :item => @name_type, :parent => nil } %>

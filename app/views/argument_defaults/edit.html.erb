<% content_for :body do %>
  <!-- <%= __FILE__[Rails.root.to_s.length+1 .. -1] %> -->
  <% form_for(@argument_default) do |f| %>
    <%= f.error_messages %>

    <p>
      <%= f.label :name_id %><br />
      <%= f.collection_select(:name_id, Name.find(:all), :id, :name, { :include_blank => true }) %>
    </p>
    <p>
    <%= f.label :argument_position %><br />
      <%= f.collection_select(:argument_position, ArgumentType.find(:all), :position, :name, { :include_blank => true }) %>
    </p>
    <p>
      <%= f.label :default %><br />
      <%= f.text_field :default %>
    </p>
    <p>
      <%= f.submit 'Update' %>
    </p>
  <% end %>
<%- end -%>
<%= render :partial => 'shared/config_edit',
      :locals => { :name => @argument_default.name.name, :item => @argument_default, :parent => nil } %>

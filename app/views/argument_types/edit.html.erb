<% content_for :body do %>
  <!-- <%= __FILE__[Rails.root.to_s.length+1 .. -1] %> -->
  <% form_for(@argument_type) do |f| %>
    <%= f.error_messages %>

    <p>
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </p>
    <p>
      <%= f.label :default %><br />
      <%= f.text_field :default %>
    </p>
    <p>
      <%= f.label :position %><br />
      <%= f.text_field :position %>
    </p>
    <p>
      <%= f.submit 'Update' %>
    </p>
  <% end %>
<%- end -%>
<%= render :partial => 'shared/config_edit',
      :locals => { :name => @argument_type.name, :item => @argument_type, :parent => nil } %>

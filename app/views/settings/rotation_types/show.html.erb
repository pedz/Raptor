<%- @title = "Showing #{@rotation_type.name} of rotation group #{@rotation_group.name}" -%>
<%- content_for(:center) do -%>
  <%= render :partial => 'layouts/shared/display_flash' %>
  <h1><%= @title %></h1>
  <p>
    <b>Name:</b>
    <%=h @rotation_type.name %>
  </p>
  <p>
    <b>PMR Required</b>
    <%=h @rotation_type.pmr_required %>
  </p>
  <p>
    <b>Comments:</b>
    <%=h @rotation_type.comments %>
  </p>
  <p>
    <b>Next type:</b>
    <%=h @rotation_type.next_type.name %>
  </p>

  <%= link_to_edit_rotation_type(@rotation_group, @rotation_type) %> |
  <%= link_to_rotation_types_list(@rotation_group) %>
<%- end -%>

<%- @title = "Listing Retain Users" -%>
<%- content_for(:center) do -%>
  <%= render :partial => 'layouts/shared/display_flash' %>
  <h1><%= @title %></h1>
  <table>
    <tr>
      <th>User</th>
      <th>Retain Id</th>
      <th>Failed</th>
      <th>Return Value</th>
      <th>Reason</th>
      <th>Software Node</th>
      <th>Hardware Node</th>
    </tr>
    
    <% for retuser in @retusers %>
      <tr>
	<td><%=h retuser.user.ldap_id %></td>
	<td><%=h retuser.retid %></td>
	<td><%=h retuser.failed %></td>
	<td><%=h retuser.logon_return %></td>
	<td><%=h retuser.logon_reason %></td>
	<td><%=h retuser.software_node.description %></td>
	<td><%=h retuser.hardware_node.description %></td>
	<td><%= link_to_show_retuser(@user, retuser, 'Show') %></td>
	<td><%= link_to_edit_retuser(@user, retuser, 'Edit') %></td>
	<% if admin? %>
	  <td><%= link_to_destroy_retuser(@user, retuser, 'Delete') %></td>
	<% end %>
      </tr>
    <% end %>
  </table>
  
  <br/>
  <%= link_to_create_retuser(@user) %> |
  <%= link_to_show_user(@user) %>
<%- end -%>

<%- content_for(:center) do -%>
  <h1>Editing rotation_group</h1>

  <%= error_messages_for :user %>

  <% form_for([:settings, @rotation_group]) do |f| %>
    <%= f.error_messages %>

    <p>
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </p>
    <p>
      <%= f.submit 'Update' %>
    </p>
  <% end %>

  <%= link_to_show_rotation_group(@rotation_group) %> |
  <%= link_to_rotation_groups_list %>
<%- end -%>

<%- content_for(:center) do -%>
  <h1>Editing user</h1>

  <%= error_messages_for :user %>

  <% form_for([:settings, @user]) do |f| %>
    <% if admin? %>
      <p>
	<%= f.label :admin %>
	<%= f.check_box :admin %>
      </p>
    <% end %>
    <p>
      <%= f.label :current_retuser_id %>
      <%= f.select(:current_retuser_id, retain_user_list(@user)) %>
    </p>
    <p>
      <%= f.submit "Update" %>
    </p>
  <% end %>

  <%= link_to 'Show', settings_user_path(@user) %> |
  <%= link_to 'Index of Users', settings_users_path %>
<%- end -%>

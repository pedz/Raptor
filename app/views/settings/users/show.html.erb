<%- @title = "Show user #{@user.ldap_id}" -%>
<%- content_for(:center) do -%>
  <h1><%= @title %></h1>
  <p>
    <b>Ldap:</b>
    <%=h @user.ldap_id %>
  </p>
  
  <p>
    <b>Retain user:</b>
    <%= link_to_users_retain_id(@user) %>
  </p>
  
  <% if admin? %>
    <p>
      <b>Admin:</b>
      <%=h @user.admin %>
    </p>
  <% end %>
  <%= link_to_edit_user(@user) %> |
  <%= link_to_users_list %>
<%- end -%>

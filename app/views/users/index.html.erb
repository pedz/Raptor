<h1>Listing users</h1>

<table>
  <tr>
    <th>Ldap</th>
    <th>Retain user</th>
    <th>Admin</th>
  </tr>

<% for user in @users %>
  <tr>
    <td><%=h user.ldap_id %></td>
    <td><%=h user.retain_user_id %></td>
    <td><%=h user.admin %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />


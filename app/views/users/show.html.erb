  <b>Retain user:</b>
  <% if @user.retusers.empty? %>
    <%= link_to 'New Retain User Id', new_retuser_path %>
  <% else %>
    <%=link_to "#{@user.retusers[0].retid}", retuser_url(@user.retusers[0]) %>
  <% end %>
</p>

<p>
  <%= link_to 'List of favorite queues', favorite_queues_path %>
</p>

<% if admin? %>
  <p>
    <b>Admin:</b>
    <%=h @user.admin %>
  </p>
<% end %>

<% if admin? %>
  <%= link_to 'Edit', edit_user_path(@user) %> |
<% end %>

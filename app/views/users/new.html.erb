<%# -*- coding: utf-8 -*- %>

<h1>New user</h1>

<%= error_messages_for :user %>

<% form_for(@user) do |f| %>
  <p>
    <b>Ldap</b><br />
    <%= f.text_field :ldap_id %>
  </p>

  <p>
    <b>Retain user</b><br />
    <%= f.text_field :retain_user_id %>
  </p>

  <p>
    <b>Admin</b><br />
    <%= f.check_box :admin %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Index of Users', users_path %>

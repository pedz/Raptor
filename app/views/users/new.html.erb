<h1>New user</h1>

<%= error_messages_for :user %>

<% form_for(@user, :url => { :namespace => :config}) do |f| %>
  <p>
    <b>Ldap</b><br />
    <%= f.text_field :ldap_id %>
  </p>

  <p>
    <b>Admin</b><br />
    <%= f.check_box :admin %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Index of Users', config_users_path %>

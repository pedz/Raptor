<!-- app/views/layouts/shared/_body.html.erb -->
  <body>
    <% if divs.nil? || divs.empty? -%>
      <%= render :partial => 'layouts/shared/flash' %>
      <%= yield %>
    <% else -%>
      <% for div in divs -%>
        <div id="<%= div.to_s.gsub(/_/, '-') %>">
          <%= yield div  %>
        </div>
      <% end -%>
    <% end -%>
  </body>

<% @title = "Edit Favorite Queue #{@favorite_queue.queue.to_param}" %>
<% @stylesheets = "favorite_queues" -%>
<% @javascripts = "favorite_queues" -%>
<% content_for(:center) do %>
<!-- <%= __FILE__[Rails.root.to_s.length+1 .. -1] %> -->
  <h1>Editing a favorite queue</h1>
  
  <%= error_messages_for :queue %>
  
  <% form_for(@favorite_queue) do |f| %>
  <%   fields_for @favorite_queue.queue do |queue| %>
    <p>
      <b>Queue name</b><br />
      <%= queue.text_field :queue_name, :size => 6 %>
    </p>
  
    <p>
      <b>Hardware (H) or Software (S)</b><br />
      <%= queue.text_field :h_or_s, :size => 1 %>
    </p>
  <% end %>
    
  <% fields_for @favorite_queue.queue.center do |center| %>
    <p>
      <b>Center</b><br />
      <%= center.text_field :center, :size => 3 %>
    </p>
  <% end %>
    <p>
      <%= f.submit "Update" %>
    </p>
  <% end %>
  
  <%= button_url 'Show', @favorite_queue %>
  <%= button_url 'Index of Favorite Queues', favorite_queues_path %>
<% end %>

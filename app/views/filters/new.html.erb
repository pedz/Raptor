<% content_for :body do %>
  <!-- <%= __FILE__[Rails.root.to_s.length+1 .. -1] %> -->
  <% form_for(@filter) do |f| %>
    <%= f.error_messages %>

    <p>
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </p>

    <% f.fields_for :condition_attributes do |condition| %>
      <p>
	<%= condition.label :sql %><br />
	<%= condition.text_field :sql %>
      </p>
    <% end %>

    <p>
      <%= f.submit 'Create' %>
    </p>
  <% end %>
<%- end -%>
<%= render :partial => 'shared/config_new',
      :locals => { :item => @filter, :parent => nil } %>

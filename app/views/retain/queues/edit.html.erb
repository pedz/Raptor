<h1>Editing queue</h1>

<%= error_messages_for :queue %>

<% form_for(@queue) do |f| %>
<% if admin? %>
  <p>
    <b>User</b><br />
    <%= f.text_field :user_id %>
  </p>
<% end %>

  <p>
    <b>Queue name</b><br />
    <%= f.text_field :queue_name %>
  </p>

  <p>
    <b>Center</b><br />
    <%= f.text_field :center %>
  </p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @queue %> |
<%= link_to 'Back', queues_path %>

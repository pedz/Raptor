<!-- app/views/retain/psar/index.html.erb -->
<table>
  <thead>
    <tr>
      <th>Problem</th>
      <th>SC</th>
      <th>AC</th>
      <th>Cause</th>
      <th>Impact</th>
      <th>Solution</th>
      <th>CIA</th>
      <th>FESN</th>
      <th>APAR</th>
      <th>Stop</th>
      <th>Sched</th>
      <th>System Date</th>
      <th>Stop Date Year</th>
      <th>Activity Date</th>
      <th>CPU Type</th>
      <th>CPU Serial Number</th>
      <th>Chargeable Src Ind</th>
      <th>Chargeable Queue Name</th>
      <th>Chargeable Center</th>
      <th>Chargeable Time HHMM</th>
      <th>Chargeable Time Minutes</th>
    </tr>
  </thead>
  <tbody>
    <% for psar in @psars %>
    <tr>
      <td><%= h psar.problem %>,<%= h psar.branch %>,<%= h psar.country %></td>
      <td><%= h psar.psar_service_code %></td>
      <td><%= h psar.psar_action_code %></td>
      <td><%= h psar.psar_cause %></td>
      <td><%= h psar.psar_impact %></td>
      <td><%= h psar.psar_solution %></td>
      <td><%= h psar.psar_cia %></td>
	 <td><%= h psar.psar_fesn %></td>
	 <td><%= h psar.psar_apar %></td>
      <td class='ret-time'><%= time_format(psar.psar_activity_stop_time) %></td>
      <td class='ret-time'><%= time_format(psar.psar_actual_time) %></td>
      <td><%= h psar.psar_system_date %></td>
      <td><%= h psar.psar_stop_date_year %></td>
      <td><%= h psar.psar_activity_date %></td>
      <td><%= h psar.cpu_type %></td>
      <td><%= h psar.cpu_serial_number %></td>
      <td><%= h psar.psar_chargeable_src_ind %></td>
      <td><%= h psar.chargeable_queue_name %></td>
      <td><%= h psar.chargeable_center %></td>
      <td><%= "%d:%02d" % psar.psar_chargeable_time.divmod(256) %></td>
      <td><%= h psar.chargeable_time_hex %></td>
    </tr>
    <% end %>
  </tbody>
</table>

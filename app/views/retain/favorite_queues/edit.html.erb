<h1>Editing a favorite queue</h1>

<%= error_messages_for :queue %>

<% form_for(@retain_favorite_queue) do |f| %>
<% if admin? %>
  <p>
    <b>User</b><br />
    <%= f.text_field :user_id %>
  </p>
<% end %>

  <p>
    <b>Queue name</b><br />
    <%= f.text_field :queue_name, :size => 6 %>
  </p>

  <p>
    <b>Center</b><br />
    <%= f.text_field :center, :size => 3 %>
  </p>

  <p>
    <b>Hardware (H) or Software (S)</b><br />
    <%= f.text_field :h_or_s, :size => 1 %>
  </p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @retain_favorite_queue %> |
<%= link_to 'Index of Favorite Queues', retain_favorite_queues_path %>

<% if admin? %>
  <p>
    <b>User:</b>
    <%=h @retain_favorite_queue.user_id %>
  </p>
<% end %>

<p>
  <b>Queue:</b>
  <%=h q = @retain_favorite_queue.queue_name.gsub(/ /, '') %>,
  <%=h c = @retain_favorite_queue.center %>
  <%= link_to 'Edit Settings', edit_retain_favorite_queue_path(@retain_favorite_queue) %> |
  <%= link_to 'Index of favorite queues', retain_favorite_queues_path %> |
  <%= link_to 'Show Retain Queue', retain_queue_path("#{q},#{c}") %>
</p>

<table>
<% for pmr in @pmrs %>
  <% tmp = "%s,%s,%s" % [ pmr.problem, pmr.branch, pmr.country ] %>
  <tr>
    <td> <%= link_to tmp, favorite_pmr_path(tmp) %></td>
    <td> <%= pmr.NLS_comments[2...pmr.NLS_comments.length] %></td>
    <td> <%= pmr.NLS_customer_name[2...pmr.NLS_customer_name.length] %></td>
    <td> <%= pmr.NLS_contact_name[2...pmr.NLS_contact_name.length] %></td>
  </tr>
<% end %>
</table>

<!-- retain/queue/show.html.erb -->
<% @title = "Retain queue: #{@queue.to_param}" -%>
<% content_for(:top) do %>
  <h1>Retain Queue: <%= h @queue.to_param %></h1>
  <%= render :partial => 'layouts/shared/display_flash' %>
<% end %>
<% content_for(:center) do %>
  <div class="smaller">
    <span id="blah"></span>
    <table class='sortable' style='font-family : courier, monospace'>
      <thead>
	<tr>
	  <th colspan='10'>
	    Click on column headings to sort by that column
	  </th>
	</tr>
	<tr>
	  <th>Sel#</th>
	  <th>Prblm,bnc,cty</th>
	  <th>S</th>
	  <th>P/S</th>
	  <th>Owner</th>
	  <th>Resolver</th>
	  <th>Next Queue</th>
	  <th>Age</th>
	  <th>
	    <span title='Jeff Smith originated the concept of Severity Days.  He was the original level two manager of the AIX RS/6000 version 3 change team'>JS</span>
	    <br>
	    <span title='Severity Days is the age of the PMR in days multiplied by a factor based upon the current severity'>SevD</span>
	  </th>
	  <th>Email Customer</th>
	  <th>Next CT</th>
	  <th>Dispatch</th>
	</tr>
      </thead>
      <tbody>
	<% @queue.calls.each_with_index do |call, index| -%>
          <tr class='<%= call_class(call) %>'>
  	    <td><%= button_url(index += 1, call) %></td>
	    <%= link_etc(call) %>
  	    <td><%= call.p_s_b %></td>
	    <%= pri_sev(call) %>
	    <%= owner(call) %>
	    <%= resolver(call) %>
	    <%= next_queue(call) %>
	    <%= age(call) %>
	    <%= jeff(call) %>
	    <%= cust_email(call) %>
	    <%= next_ct(call) %>
	    <td><%= link_to_remote("dispatch", :url => dispatch_combined_call_path(call)) %></td>
  	  </tr>
        <% end -%>
      </tbody>
    </table>
  </div>
<% end %>
<% content_for(:bottom) do %>
  <ul style='color: green'>
    <li>Hover over PMR number to see ECPAAT</li>
    <li>Each section of ECPAAT is now limited to 5 lines</li>
    <li>Customer Time of Day moved into ECPAAT section</li>
    <li>Time of last CT can be seen by hovering over Next CT</li>
    <li>"dispatch" will dispatch you to the pmr... I'd advise against
    using it yet.</li>
    <li>Refresh (reload) now causes db for queue, calls, and pmrs to be refreshed</li>
  </ul>
  <div>
    <%= button_url("Home", "/") %>
    <%= button_url 'Favorite Queues', combined_favorite_queues_path %>
  </div>
<% end %>

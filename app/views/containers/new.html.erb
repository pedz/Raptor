<h1>New container</h1>

<% form_for(@container) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :container_name_id %><br />
    <%= f.collection_select(:container_name_id,
            Name.find(:all,
		:joins => "INNER JOIN name_types ON type = name_types.name_type",
                :conditions => { "name_types.container" => true }), :id, :name) %>
  </p>
  <p>
    <%= f.label :relationship_id %><br />
    <%= f.text_field :relationship_id %>
  </p>
  <p>
    <%= f.label :element_name_id %><br />
    <%= f.text_field :element_name_id %>
  </p>
  <p>
    <%= f.label :element_name_type %><br />
    <%= f.text_field :element_name_type %>
  </p>
  <p>
    <%= f.label :owner_id %><br />
    <%= f.text_field :owner_id %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', containers_path %>

<h1>Listing containers</h1>

<table>
  <tr>
    <th>Container name</th>
    <th>Relationship</th>
    <th>Element name id</th>
    <th>Element name type</th>
    <th>Owner</th>
  </tr>

<% @containers.each do |container| %>
  <tr>
    <td><%=h container.container_name.name %></td>
    <td><%=h container.relationship.association_type.association_type %></td>
    <td><%=h container.element_name_id %></td>
    <td><%=h container.element_name_type %></td>
    <td><%=h container.owner.ldap_id %></td>
    <td><%= link_to 'Show', container %></td>
    <td><%= link_to 'Edit', edit_container_path(container) %></td>
    <td><%= link_to 'Destroy', container, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New container', new_container_path %>

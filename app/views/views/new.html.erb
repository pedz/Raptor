<%# -*- coding: utf-8 -*- %>
<% content_for :body do %>
  <!-- <%= __FILE__[Rails.root.to_s.length+1 .. -1] %> -->
  <% form_for(@view) do |f| %>
    <%= f.error_messages %>
    <p>
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </p>
    <p>
      <%= f.submit 'Create' %>
    </p>
  <% end %>
<%- end -%>
<%= render :partial => 'shared/config_new',
      :locals => { :item => @view, :parent => nil } %>

<%# -*- coding: utf-8 -*- %>

<!-- app/views/views/index.html.erb -->
<%- @title = "View Listing" -%>
<%- content_for(:top) do -%>
  <h1><%= @title %></h1>
  <%= render :partial => 'layouts/shared/display_flash' %>
<%- end -%>
<%- content_for(:center) do -%>
<table>
  <tr>
    <th>Name</th>
    <th>Owner</th>
  </tr>

<% @views.each do |view| %>
  <tr>
    <td><%=h view.name %></td>
    <td><%=h view.owner.ldap_id %></td>
    <td><%= link_to 'Show', view %></td>
    <td><%= link_to 'Edit', edit_view_path(view) %></td>
    <td><%= link_to 'Destroy', view, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
<%- end -%>
<%- content_for(:bottom) do -%>
<%= link_to 'New view', new_view_path %>
<%- end -%>

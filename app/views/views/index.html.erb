<% content_for :body do %>
  <!-- <%= __FILE__[Rails.root.to_s.length+1 .. -1] %> -->
  <table>
    <tr>
      <th>Name</th>
      <th>Owner</th>
    </tr>

    <% @views.each do |view| %>
      <tr>
	<td><%=h view.name %></td>
	<td><%=h view.owner.ldap_id %></td>
	<td><%= link_to 'Show', view %></td>
	<td><%= link_to 'Edit', edit_view_path(view) %></td>
	<td><%= link_to 'Destroy', view, :confirm => 'Are you sure?', :method => :delete %></td>
      </tr>
    <% end %>
  </table>
<%- end -%>
<%= render :partial => 'shared/config_index',
      :locals => { :klass => View, :parent => nil } %>
